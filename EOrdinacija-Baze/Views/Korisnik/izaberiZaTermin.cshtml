@model IEnumerable<EOrdinacija_Baze.Korisnik>

@{
    ViewBag.Title = "Izaberi doktora za rezervisanje termina";
    Layout = "~/Views/Shared/LayoutKorisnik.cshtml";
}
<h3>Odaberite pacijenta za rezervisanje termina</h3>
<p>
    @using (Html.BeginForm("AddTermin", "Korisnik", FormMethod.Get))
    { 
    <table>
        <tr>
        <td> Unesi ime pacijenta </td>
        <td> @Html.TextBox("ime") </td>
       </tr>
        <tr>
            <td></td>
        <td><input type="submit" value="Pronađi" /></td>
            </tr>
    </table>
    
    }
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime_oca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ime_oca)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
       
        <td>
            @Html.ActionLink(
            "Odredi termin",
            "Index",
            "Calendar" , 
            new {  id = item.IdKorisnika },
            null) |
    
        </td>
    </tr>
}

</table>
