            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }
  </script> 




<h2>Dodaj opremu</h2>
<body>
<table>
<td><input type="button" value="Dodaj sobu" onclick="DodajSobu()" /></td>
<td><input type="button" value="Dodaj odjel" onclick="DodajOdjel()" /></td>
<td><input type="button" value="Dodaj lijek" onclick="DodajLijek()"</td>
<td><input type="button" value="Potrošeno lijeka" onclick="PotrošeniLijek()"</td>
</table>
<p id="pokazi"></p>
