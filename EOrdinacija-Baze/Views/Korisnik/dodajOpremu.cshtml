@{
    ViewBag.Title = "dodajOpremu";
    Layout = "~/Views/Shared/LayoutKorisnik.cshtml";
}
<script type="text/javascript">
    function DodajSobu() {
        var booksDiv = $("#pokazi");
        $.ajax({
            type: 'POST',
            url: '/Korisnik/DodajSobu',

            success: function (data) {
                booksDiv.html("");
                booksDiv.html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    };
    function DodajOdjel() {
