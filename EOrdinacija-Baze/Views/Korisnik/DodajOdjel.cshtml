@model EOrdinacija_Baze.Odjel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DodajOdjel</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm("SpremiOdjel","Korisnik",FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
<table>         
    <tr>      
            <td class="editor-label">
                @Html.LabelFor(model => model.TipOdjela)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.TipOdjela)
                @Html.ValidationMessageFor(model => model.TipOdjela)
            </td>
    </tr>
    <tr>
            <td class="editor-label">
                @Html.LabelFor(model => model.BrojSoba)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.BrojSoba)
                @Html.ValidationMessageFor(model => model.BrojSoba)
            </td>
    </tr>
         </table> 
        
          <p>
                <input type="submit" value="Spremi" />
            </p>     
    }
    
</body>
</html>
