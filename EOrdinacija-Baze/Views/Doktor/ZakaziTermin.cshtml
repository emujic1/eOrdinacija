@model EOrdinacija_Baze.Termini

@{
    ViewBag.Title = "Zakazi termin pacijentu";
}

<h2>Zakaži termin</h2>
@using (@Html.BeginForm("Zakazitermin","Doktor",FormMethod.Post))
{
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<table>
    <tr>
        <td>@Html.LabelFor(a=>a.IdPacijenta)</td>
        <td>@Html.DropDownList("imena","Odaberite")</td>

    </tr>
    <tr>
        <td>@Html.LabelFor(a=>a.DatumTermina)</td>
        <td>@Html.EditorFor(a=>a.DatumTermina)</td>
        <td>@Html.ValidationMessageFor(a=>a.DatumTermina)</td>
    </tr>
    <tr>
        <td></td>
        <td><input type="submit" value="Zakaži"</td>
    </tr>
</table>
} 
